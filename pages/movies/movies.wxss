@import "movie-list/movie-list-template.wxss";

.container{
  background-color: #f2f2f2;
}

.search{
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-img{
  margin-left: 20rpx;
}

.search input{
  font-size: 28rpx;
  margin-left: 20rpx;
  flex: 1;
}

.placeholder{
  font-size: 28rpx;
  color: #d1d1d1;
}

.movies-template{
  margin-bottom: 30rpx;
}

.search-panel{
  position: absolute;
  top: 120rpx;
}

.xx-img{
  height: 30rpx;
  width: 30rpx;
  margin: 0 20rpx;
}